@model BrandEditVm

<form method="post">
	@Html.AntiForgeryToken()
	<input type="hidden" asp-for="Id" />
	<div class=" border p-3 m-4 w-75 mx-auto">
		<div class="row pb-2">
			<h2 class="text-primary">@(Model.Id == 0 ? "Add Brand" : "Update Brand")</h2>
			<hr />
		</div>
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class=" mb-3 row p-1">
			<label class="p-0" asp-for="BrandName"></label>
			<input class="form-control" asp-for="BrandName" />
			<span class="text-danger" asp-validation-for="BrandName"></span>
		</div>
		@if (Model.Id == 0)
		{
			<button class="btn btn-primary" type="submit">
				<i class="bi bi-floppy2-fill"></i>
				Save
			</button>
		}
		else
		{
			<button class="btn btn-warning" type="submit">
				<i class="bi bi-floppy2-fill"></i>
				Update
			</button>
		}

		<a class="btn btn-success" asp-controller="Brands" asp-action="Index">
			<i class="bi bi-backspace"></i>
			Back to List
		</a>
	</div>
</form>
